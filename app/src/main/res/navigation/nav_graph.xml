<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sparkfusion.ef_test_task.main.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_courseInfoFragment"
            app:destination="@id/courseInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/courseInfoFragment"
        android:name="com.sparkfusion.ef_test_task.course.CourseInfoFragment"
        tools:layout="@layout/fragment_course_info" >
        <argument
            android:name="courseId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.sparkfusion.ef_test_task.saved.FavoritesFragment"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_courseInfoFragment"
            app:destination="@id/courseInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.sparkfusion.ef_test_task.account.AccountFragment"
        tools:layout="@layout/fragment_account" />


</navigation>